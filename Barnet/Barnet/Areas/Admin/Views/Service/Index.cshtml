@model VmService
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="Service" asp-action="Create">Create</a>
        </div>
        <div class="col-lg-6">
            <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="Service" asp-action="CreateCategory">Create Category</a>
        </div>
        <hr />
        <div class="col-lg-12 mt-3">

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Content</th>
                        <th scope="col">Category_Name</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>

                    @{
                        int i = 1;
                        foreach (var item in Model.Services)
                        {
                            <tr>
                                <td>@i</td>
                                <td><img src="~/Uploads/@item.Image" style="width:150px;max-height:150px;" alt="Alternate Text" /></td>
                                <td>@item.Content</td>
                                <td>@item.Service_Category.Name</td>
                                <td>
                                    <a class="btn btn-success" asp-area="Admin" asp-controller="Service" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                    <a class="btn btn-danger" asp-area="Admin" asp-controller="Service" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')">Delete</a>
                                </td>
                            </tr>

                            i++;
                        }
                    }
                </tbody>
            </table>


        </div>
    </div>
</div>

