@model VmService 
@{
    ViewData["Title"] = "FeedBackIndex";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <a class="btn btn-primary mb-3" asp-area="Admin" asp-controller="Service" asp-action="FeedBackCreate">Create</a>
        </div>
        <hr />
        <div class="col-lg-12 mt-3">

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Content</th>
                        <th scope="col">Mail</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>

                    @{
                        int i = 1;
                        foreach (var item in Model.FeedBacks)
                        {
                                        <tr>
                                            <td>@i</td>
                                            <td><img src="~/Uploads/@item.Image" style="width:150px;max-height:150px;" alt="Alternate Text" /></td>
                                            <td>@item.Name</td>
                                            <td>@item.Content</td>
                                            <td>@item.Mail</td>
                                            <td>
                                                <a class="btn btn-success" asp-area="Admin" asp-controller="Service" asp-action="FeedBackUpdate" asp-route-id="@item.Id">Update</a>
                                                <a class="btn btn-danger" asp-area="Admin" asp-controller="Service" asp-action="FeedBackDelete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')">Delete</a>
                                            </td>
                                        </tr>

                            i++;
                        }
                    }
                </tbody>
            </table>


        </div>
    </div>
</div>
