@model FeedBack 
@{
    ViewData["Title"] = "FeedBackUpdate";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-area="Admin" asp-controller="Service" asp-action="FeedBackUpdate" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.ImageFile" class="form-label">Image</label>
                    <input class="form-control" asp-for="@Model.ImageFile">
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Content" class="form-label">Content</label>
                    <input class="form-control" asp-for="@Model.Content">
                    <span asp-validation-for="@Model.Content" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Mail" class="form-label">Mail</label>
                    <input class="form-control" asp-for="@Model.Mail">
                    <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                </div>
               
                <input type="hidden" asp-for="@Model.Image" />

                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-area="Admin" asp-controller="Service" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>
