@model Service
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-area="Admin" asp-controller="Service" asp-action="Update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.ImageFile" class="form-label">Image</label>
                    <input class="form-control" asp-for="@Model.ImageFile">
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Content" class="form-label">Context</label>
                    <input class="form-control" asp-for="@Model.Content">
                    <span asp-validation-for="@Model.Content" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Icon" class="form-label">Icon</label>
                    <input class="form-control" asp-for="@Model.Icon">
                    <span asp-validation-for="@Model.Icon" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <select class="form-control mb-3 selectTwo" aria-label="Default select example" multiple="multiple" asp-for="@Model.Service_Category_Id">
                        @foreach (var item in ViewBag.Service_Categories)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                <input type="hidden" asp-for="@Model.Image" />
                <input type="hidden" asp-for="@Model.Service_Category_Id"/>

                <button type="submit" class="btn btn-primary">Update</button>
                <a asp-area="Admin" asp-controller="Service" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>



